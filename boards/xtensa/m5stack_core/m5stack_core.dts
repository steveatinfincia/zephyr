/dts-v1/;

#include <espressif/esp32.dtsi>
#include "m5stack_core-pinctrl.dtsi"

/ {
	model = "M5Stack Core";
	compatible = "m5stack,m5stack_core", "espressif,esp32";

	aliases {
		uart-0 = &uart0;
		i2c-0 = &i2c0;
		porta = &i2c0;
		sw0 = &button_a;
		sw1 = &button_b;
		sw2 = &button_c;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,flash = &flash0;
		zephyr,display = &ili9342c;
	};

	buttons {
		compatible = "gpio-keys";
		button_a: button_a {
			label = "A button";
			gpios = <&gpio1 7 GPIO_ACTIVE_LOW>;
		};
		button_b: button_b {
			label = "B button";
			gpios = <&gpio1 6 GPIO_ACTIVE_LOW>;
		};
		button_c: button_c {
			label = "C button";
			gpios = <&gpio1 5 GPIO_ACTIVE_LOW>;
		};
	};

	lcd_backlight_en {
		compatible = "regulator-fixed-sync", "regulator-fixed";
		label = "lcd_backlight_enable";
		regulator-name = "lcd_backlight_enable";
		enable-gpios = <&gpio0 32 GPIO_ACTIVE_HIGH>;
		regulator-boot-on;
	};
};

&cpu0 {
	clock-frequency = <ESP32_CLK_CPU_240M>;
};

&cpu1 {
	clock-frequency = <ESP32_CLK_CPU_240M>;
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_tx_gpio1 &uart0_rx_gpio3>;
	pinctrl-names = "default";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	sda-pin = <21>;
	scl-pin = <22>;
	pinctrl-0 = <&i2c0_sda_gpio21 &i2c0_scl_gpio22>;
	pinctrl-names = "default";
};

&spi3 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";
	pinctrl-0 = <&spim3_mosi_gpio23 &spim3_sclk_gpio18 
	             &spim3_csel_gpio14>;
	pinctrl-names = "default";

	ili9342c: ili9342c@0 {
		compatible = "ilitek,ili9341";
		label = "DISPLAY";
		spi-max-frequency = <25000000>;
		reg = <0>;
		display-inversion;
		cmd-data-gpios = <&gpio0 27 GPIO_ACTIVE_LOW>;
		reset-gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
		pixel-format = <0>;
		rotation = <0>;
		
		width = <240>;
		height = <320>;
		//pwctrl1 = [12];
		//pwctrl2 = [03];
		//vmctrl1 = [f2];
		pgamctrl = [00 0C 11 04 11 08 37 89 4C 06 0C 0A 2E 34 0F];
		ngamctrl = [00 0B 11 05 13 09 33 67 48 07 0E 0B 2E 33 0F];
	};
};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&timer2 {
	status = "okay";
};

&timer3 {
	status = "okay";
};

&trng0 {
	status = "okay";
};

&flash0 {
	status = "okay";
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Reserve 60kB for the bootloader */
		boot_partition: partition@1000 {
			label = "mcuboot";
			reg = <0x00001000 0x0000F000>;
			read-only;
		};

		/* Reserve 1024kB for the application in slot 0 */
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x00010000 0x00100000>;
		};

		/* Reserve 1024kB for the application in slot 1 */
		slot1_partition: partition@110000 {
			label = "image-1";
			reg = <0x00110000 0x00100000>;
		};

		/* Reserve 256kB for the scratch partition */
		scratch_partition: partition@210000 {
			   label = "image-scratch";
			   reg = <0x00210000 0x00040000>;
		};

		storage_partition: partition@250000 {
			label = "storage";
			reg = <0x00250000 0x00006000>;
		};
	};
};
